    $("#login").click(function (e) {
        var login_data = {
            "Username": $("#username").val(),
            "Password": $("#password").val(),
        }
        $.ajax({
            type: "POST",
            url: "UserLogin",
            data: login_data,
            dataType: "json",
            success: function (response) {
                if (response == true) {
                    alert("登入成功");
                    window.location.href = "Search"
                }
                else {
                    alert("登入失敗");
                    $("#username").val("");
                    $("#password").val("");
                }
            },
            error: function (error) {
                alert("你Controller沒進去");
            }
        });

    })
