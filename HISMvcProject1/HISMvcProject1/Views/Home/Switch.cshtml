                        type: "post",
                        dataType: "json"
                    }
                }
            }
        });

        //kendoNumericTextBox()
        $("#caliber").kendoNumericTextBox();
        $("#inbodycm").kendoNumericTextBox();

        //save data to database
        $("#save").click(function (e) {
            if(intubation == 'insert') {
                intubation = false;
                var validator = $("#addTubeForm").kendoValidator().data("kendoValidator");
                if (validator.validate()) {
                    var create_data = {
                        "PatientID": 4065700123,
                        "TubePartID": $("#pipeline_Location").val(),
                        "TubeNameID": $("#pipeline_Name").val(),
                        "SysDate": kendo.toString($("#start_datepicker").data("kendoDatePicker").value(), "yyyy-MM-dd"),
                        "ExpDate": kendo.toString($("#expiry_datepicker").data("kendoDatePicker").value(), "yyyy-MM-dd"),
                        "Caliber": $("#caliber").val(),
                        "InBodyCm": $("#inbodycm").val(),
                        "TubeNote": $("#pipeline_Note").val(),
                        "LocationX": x,
                        "LocationY": y.toFixed(0)
                    }
                    $.ajax({
                        type: "POST",
                        url: "InsertData",
                        data: create_data,
                        dataType: "json",
                        success: function (response) {
                            if (response == true) {
                                alert("資料已新增");
                                location.reload();
                                /*Insert.enable(true);
                                Delete.enable(true);
                                Save.enable(false);*/
                            }
                        },
                        error: function (error) {
                            alert("系統發生錯誤");
                        }
                    });
                }
            }else{

                intubation = false;
                var validator = $("#addTubeForm").kendoValidator().data("kendoValidator");
                if (validator.validate()) {
                    var edit_data = {
                        "PatientID": 4065700123,
                        "TubePartID": $("#pipeline_Location").val(),
                        "TubeNameID": $("#pipeline_Name").val(),
                        "SysDate": kendo.toString($("#start_datepicker").data("kendoDatePicker").value(), "yyyy-MM-dd"),
                        "ExpDate": kendo.toString($("#expiry_datepicker").data("kendoDatePicker").value(), "yyyy-MM-dd"),
                        "Caliber": $("#caliber").val(),
                        "InBodyCm": $("#inbodycm").val(),
                        "TubeNote": $("#pipeline_Note").val(),
                        "LocationX": locatoinX[tubepointer],
                        "LocationY": locatoinY[tubepointer]
                    }
                    $.ajax({
                        type: "POST",
                        url: "EditData",
                        data: edit_data,
                        dataType: "json",
                        success: function (response) {
                            if (response == true) {
                                alert("資料已修改");
                                location.reload();
                                /*Insert.enable(true);
                                Delete.enable(true);
                                Save.enable(false);*/
                            }
                        },
                        error: function (error) {
                            alert("系統發生錯誤");
                        }
                    });
                }
            }

        });

        //click insert button
        $("#insert").click(function () {
            intubation = 'insert';
            /*Insert.enable(false);
            Delete.enable(false);
            Save.enable(true);*/
        });

        //click delete button
        $ ("#delete").click(function (e) {
            /*intubation = 'delete';
            var x = event.clientX;
            var y = event.clientY;
            locatoinX[locationPointer] = x;
            locatoinY[locationPointer] = y;*/
            pointlocation = {
                "LocationX":location_point_x,
                "LocationY":location_point_y
            }
            $.ajax({
                type: "POST",
                url: "DeleteTube",
                data: pointlocation,
                dataType: "json",
                success: function (response) {
                    if (response == true) {
                        alert("已刪除");
                        location.reload();
                    }
                },
                error: function (error) {
                    alert("系統發生錯誤");
                }
            });

        });
    })







    function WordsDeal() {
        var curLength = $("#pipelineNote").val().length;
        if (curLength > 1000) {
            var num = $("#pipelineNote").val().substr(0, 1000);
            $("#pipelineNote").val(num);
            alert("超過字數限制(1000字)，多出的字將被移除！");
        }
    }
